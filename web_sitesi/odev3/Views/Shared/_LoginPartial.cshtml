@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right">
        <li>
            <strong>
                @Html.ActionLink(odev3.Kaynaklar.dili.merhaba + " " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
            </strong>
                &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
        </li>
        <li><a href="javascript:document.getElementById('logoutForm').submit()"><strong> @odev3.Kaynaklar.dili.oturumukapat </strong></a></li>
    </ul>
    }
}
else
{
<ul class="nav navbar-nav navbar-right">
    <li><strong> @Html.ActionLink(odev3.Kaynaklar.dili.kaydol, "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" }) </strong></li>
    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
    <li><strong> @Html.ActionLink(odev3.Kaynaklar.dili.oturumac, "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" }) </strong></li>
</ul>
}
